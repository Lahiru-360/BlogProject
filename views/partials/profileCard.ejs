 <div
        class="bg-white dark:bg-gray-800 rounded-xl h-auto shadow-2xl max-w-4xl w-full p-8 transition-all duration-300 animate-fade-in mx-auto relative">
        <div class="flex flex-col md:flex-row">
            <div class="md:w-1/3 text-center mb-8 md:mb-0">
                <img src="/images/user-img.jpg" alt="Profile Picture"
                    class="rounded-full w-48 h-48 mx-auto mb-4 border-4 border-indigo-800 dark:border-blue-900 transition-transform duration-300 hover:scale-105">
                <h1 class="text-2xl font-bold text-indigo-800 dark:text-white mb-2">
                    <%= user.firstname %>
                        <%= user.lastname %>
                </h1>
                <div>
                    <div class="flex items-center justify-center gap-4 mt-4">
                        <button
                            class="bg-indigo-500 text-white px-4 py-2 rounded-lg hover:bg-blue-900 transition-colors duration-300"
                            id="openEditModal">Edit Profile</button>

                        <a onclick="deleteProfile(event)" href="/delete/<%= user.id %>"
                            class="inline-flex items-center justify-center bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-900 transition-colors duration-300">
                            Delete
                        </a>
                    </div>
                </div>

            </div>
            <div class="md:w-2/3 md:pl-8 flex flex-col justify-center md:space-y-5">
                <div>
                    <h2 class="text-xl font-semibold text-indigo-800 dark:text-white mb-4">About Me</h2>
                    <p class="text-gray-700 dark:text-gray-300 mb-6">
                        <%= user.about!="" ?user.about:"*Add your details*" %>
                    </p>
                </div>
                <div>
                    <h2 class="text-xl font-semibold text-indigo-800 dark:text-white mb-4">Contact Information</h2>
                    <ul class="space-y-2 text-gray-700 dark:text-gray-300">
                        <li class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 mr-2 text-indigo-800 dark:text-blue-900" viewBox="0 0 20 20"
                                fill="currentColor">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                            </svg>
                            <%= user.email %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script>
        function fadeOut() {
            modal.classList.add('animate-fade-out');

            modal.addEventListener('animationend', function handleAnimationEnd() {
                modal.classList.add('hidden');
                modal.classList.remove('animate-fade-out');
                modal.removeEventListener('animationend', handleAnimationEnd);
            });
        }

        function deleteProfile(event) {
            event.preventDefault();
            const isDark = document.documentElement.classList.contains('dark');
            const deleteUrl = event.currentTarget.href;
            Swal.fire({
                title: 'Are you sure?',
                text: 'You are about to delete your profile.',
                icon: 'warning',
                theme: isDark ? 'dark' : 'light',
                showCancelButton: true,
                iconColor: '#d33',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6362F1',
                confirmButtonText: 'Delete',
            }).then((result) => {
                // Only if the user confirms, then proceed with the redirection
                if (result.isConfirmed) {
                    window.location.href = deleteUrl;
                }
            });
        }

    </script>