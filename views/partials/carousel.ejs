<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
<script>
  let cont = 0;
  let sliderInterval;

  function showSlide(slideToShow, slideToHide, activeButton, inactiveButton) {
  $(slideToHide).stop(true, true).hide(); // immediately hide the other slide
  $(slideToShow).stop(true, true).fadeIn(500); // fade in the current one
  $(inactiveButton).removeClass("bg-indigo-800");
  $(activeButton).addClass("bg-indigo-800");
}


  function switchSlide() {
    if (cont === 0) {
      showSlide("#slider-2", "#slider-1", "#sButton2", "#sButton1");
      cont = 1;
    } else {
      showSlide("#slider-1", "#slider-2", "#sButton1", "#sButton2");
      cont = 0;
    }
  }

  function startSlider() {
    sliderInterval = setInterval(switchSlide, 8000);
  }

  function resetSlider() {
    clearInterval(sliderInterval);
    startSlider();
  }

  function sliderButton1() {
    if (cont !== 0) {
      showSlide("#slider-1", "#slider-2", "#sButton1", "#sButton2");
      cont = 0;
      resetSlider();
    }
  }

  function sliderButton2() {
    if (cont !== 1) {
      showSlide("#slider-2", "#slider-1", "#sButton2", "#sButton1");
      cont = 1;
      resetSlider();
    }
  }

  $(document).ready(function () {
    $("#sButton1").addClass("bg-indigo-800");
    $("#slider-1").removeClass("hidden");
    startSlider();
  });

</script>