  <button id="sButton1" onclick="sliderButton1()" class="bg-indigo-400 rounded-full w-3 pb-1 "></button>
  <button id="sButton2" onclick="sliderButton2() " class="bg-indigo-400 rounded-full w-3 p-1"></button>
