<%-include("partials/header.ejs") %>
    <% const days=["Sun", "Mon" , "Tue" , "Wed" , "Thurs" , "Fri" , "Sat" ]; %>
        <!-- component -->
        <div class="max-w-screen-lg mx-auto">
            <main class="mt-10">

                <div class="mb-4 md:mb-0 w-full mx-auto relative">
                    <div class="px-4 lg:px-0">
                        <h2 class="text-4xl font-semibold text-gray-800 leading-tight dark:text-gray-300">
                            <%= blog.blogname %>
                        </h2>
                
                        <a href="#" class="py-2 text-indigo-700 inline-flex items-center justify-center mb-2">
                            <%= blog.category %>
                        </a>
                        <span class="absolute right-0 mt-1 text-gray-500 text-sm dark:hover:text-gray-50 dark:text-gray-300">
                            <%= days[blog.published_at.getDay()] %>
                                <%= blog.published_at.getMonth() %>
                                    <%= blog.published_at.getFullYear() %>
                                    <%= blog.published_at.getHours() %>:<%= blog.published_at.getMinutes() %>:<%=
                                        blog.published_at.getSeconds() %>
                        </span>
                    </div>

                    <img src="https://images.unsplash.com/photo-1587614387466-0a72ca909e16?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80"
                        class="w-full object-cover lg:rounded" style="height: 28em;" />
                </div>

                <div class="flex flex-col lg:flex-row lg:space-x-12">

                    <div
                        class="px-4 lg:px-0 mt-12 text-gray-700 text-lg leading-relaxed w-full lg:w-3/4 dark:text-gray-300 break-words">
                        <%- blog.blogcontent %>
                    </div>

                    <div class="w-full lg:w-1/4 m-auto mt-12 max-w-screen-sm " >
                        <div class="p-4 border-t border-b md:border md:rounded">
                            <div class="flex py-2">
                                <img src="/images/user-img.jpg"
                                    class="h-10 w-10 rounded-full mr-2 object-contain" />
                                <div>
                                    <p class="font-semibold text-gray-700 text-sm dark:text-gray-300"> <%= blog.firstname %> <%= blog.lastname %>
                                    </p>
                                    <p class="font-semibold text-gray-600 text-xs dark:text-gray-300"> Author </p>
                                </div>
                            </div>
                    
                            <p class="text-gray-700 py-3 dark:text-gray-300 overflow-auto custom-scrollbar" style="max-height: 300px">
                                <%= blog.about %>
                            </p>     
                                
                             
                        </div>
                    </div>

                </div>
            </main>
        </div>


        <%-include("partials/footer.ejs") %>